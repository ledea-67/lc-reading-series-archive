---
interface Props {
  title: string;
  description?: string;
}

const { title, description = 'Archive of the Lewis & Clark College Reading Series (2004-2026)' } = Astro.props;
---

<!doctype html>
<html lang="en">
  <head>
    <meta charset="UTF-8" />
    <meta name="viewport" content="width=device-width, initial-scale=1.0" />
    <meta name="description" content={description} />
    <title>{title} | Lewis & Clark Reading Series</title>
    <!-- Design: fonts will be added here -->
    <!-- Design: additional meta tags, favicons, etc. -->
  </head>
  <body>
    <!-- Navigation placeholder - design will customize -->
    <nav>
      <a href="/">Home</a>
      <a href="/about">About</a>
      <a href="/writers">Writers</a>
      <a href="/years">Years</a>
    </nav>

    <main>
      <slot />
    </main>

    <!-- Footer placeholder - design will customize -->
    <footer>
      <p>Lewis & Clark College Reading Series Archive</p>
      <p>2004 - 2026</p>
    </footer>

    <style is:global>
      /* Minimal reset - design branches will override */
      *,
      *::before,
      *::after {
        box-sizing: border-box;
        margin: 0;
        padding: 0;
      }

      html {
        font-family: system-ui, sans-serif;
        line-height: 1.5;
      }

      body {
        min-height: 100vh;
      }

      a {
        color: inherit;
      }

      img {
        max-width: 100%;
        height: auto;
      }
    </style>

    <style>
      /* Layout scaffolding - design branches will replace */
      nav {
        display: flex;
        gap: 1rem;
        padding: 1rem;
      }

      main {
        padding: 1rem;
      }

      footer {
        padding: 1rem;
        margin-top: 2rem;
      }
    </style>
  </body>
</html>
