---
/**
 * Years Index — The Archive
 *
 * The spine of the collection. Each year a chapter in literary history.
 * Comprehensive yet readable, with vertical timeline as organizational principle.
 */
import Base from '../../layouts/Base.astro';
import Timeline from '../../components/Timeline.astro';
import { getAllYears, getWritersByYear, getWritersWithUnknownYear } from '../../lib/data';

const years = getAllYears();
const unknownYearWriters = getWritersWithUnknownYear();

// Build year data with writer counts
const yearData = years.map((year) => ({
  year,
  count: getWritersByYear(year).length,
}));

const startYear = years[years.length - 1];
const endYear = years[0];
const totalYears = years.length;
---

<Base title="Timeline" description="Browse the Lewis & Clark College Reading Series by year">
  <div class="years-page">
    <!-- Page Header -->
    <header class="page-header">
      <h1 class="page-title">Timeline</h1>
      <p class="page-subtitle">The chronological record</p>
      <div class="page-meta">
        <p class="page-span">{startYear} — {endYear}</p>
        <p class="page-count">{totalYears} years documented</p>
      </div>
    </header>

    <!-- Main Content: Timeline + Year Grid -->
    <div class="years-layout">
      <!-- Sidebar Timeline -->
      <aside class="years-sidebar">
        <nav class="sidebar-nav">
          <h2 class="sidebar-title">Navigate</h2>
          <Timeline years={yearData} />
        </nav>
      </aside>

      <!-- Year Grid -->
      <main class="years-main">
        <div class="years-grid">
          {yearData.map((item, i) => (
            <a
              href={`/years/${item.year}`}
              class="year-block"
              style={`animation-delay: ${50 + i * 30}ms`}
            >
              <span class="year-block-year">{item.year}</span>
              <span class="year-block-count">
                {item.count} {item.count === 1 ? 'writer' : 'writers'}
              </span>
            </a>
          ))}
        </div>

        <!-- Unknown Year Section -->
        {unknownYearWriters.length > 0 && (
          <section class="unknown-section">
            <header class="unknown-header">
              <h2 class="unknown-title">Year Unknown</h2>
              <p class="unknown-subtitle">
                {unknownYearWriters.length} {unknownYearWriters.length === 1 ? 'writer' : 'writers'} awaiting confirmation
              </p>
            </header>
            <ul class="unknown-list">
              {unknownYearWriters.map((writer) => (
                <li>
                  <a href={`/writers/${writer.id}`} class="unknown-link">
                    <span class="unknown-name">{writer.name}</span>
                    <span class="unknown-genre">{writer.genre}</span>
                  </a>
                </li>
              ))}
            </ul>
          </section>
        )}
      </main>
    </div>
  </div>
</Base>

<style>
  .years-page {
    max-width: var(--width-wide);
    margin: 0 auto;
    padding: 0 var(--margin-page);
  }

  /* Page Header */
  .page-header {
    text-align: center;
    padding: var(--space-10) 0 var(--space-12);
    border-bottom: 1px solid var(--rule-faint);
    margin-bottom: var(--space-10);
  }

  .page-title {
    font-family: var(--font-display);
    font-size: var(--text-5xl);
    font-weight: 400;
    letter-spacing: var(--tracking-tight);
    color: var(--ink-deep);
    margin: 0 0 var(--space-2);
    animation: settle var(--duration-slower) var(--ease-out) forwards;
    opacity: 0;
    transform: translateY(8px);
  }

  .page-subtitle {
    font-family: var(--font-ui);
    font-size: var(--text-lg);
    font-style: italic;
    color: var(--ink-muted);
    letter-spacing: var(--tracking-wide);
    margin: 0 0 var(--space-6);
    animation: settle var(--duration-slower) var(--ease-out) forwards;
    animation-delay: 50ms;
    opacity: 0;
    transform: translateY(8px);
  }

  .page-meta {
    display: flex;
    flex-direction: column;
    align-items: center;
    gap: var(--space-1);
    animation: settle var(--duration-slower) var(--ease-out) forwards;
    animation-delay: 100ms;
    opacity: 0;
    transform: translateY(8px);
  }

  .page-span {
    font-family: var(--font-display);
    font-size: var(--text-xl);
    font-variant-numeric: oldstyle-nums;
    color: var(--ink-body);
    margin: 0;
  }

  .page-count {
    font-family: var(--font-ui);
    font-size: var(--text-sm);
    font-style: italic;
    color: var(--ink-muted);
    letter-spacing: var(--tracking-wide);
    margin: 0;
  }

  /* Layout */
  .years-layout {
    display: grid;
    grid-template-columns: 200px 1fr;
    gap: var(--space-12);
    align-items: start;
  }

  /* Sidebar */
  .years-sidebar {
    position: sticky;
    top: calc(80px + var(--space-6));
    max-height: calc(100vh - 100px);
    overflow-y: auto;
    padding-right: var(--space-4);
  }

  .years-sidebar::-webkit-scrollbar {
    width: 4px;
  }

  .years-sidebar::-webkit-scrollbar-track {
    background: transparent;
  }

  .years-sidebar::-webkit-scrollbar-thumb {
    background: var(--rule-light);
    border-radius: 2px;
  }

  .sidebar-nav {
    padding-bottom: var(--space-8);
  }

  .sidebar-title {
    font-family: var(--font-ui);
    font-size: var(--text-xs);
    font-weight: 500;
    text-transform: uppercase;
    letter-spacing: var(--tracking-widest);
    color: var(--ink-muted);
    margin: 0 0 var(--space-4);
    padding-bottom: var(--space-2);
    border-bottom: 1px solid var(--rule-faint);
  }

  /* Year Grid */
  .years-main {
    min-width: 0;
  }

  .years-grid {
    display: grid;
    grid-template-columns: repeat(auto-fill, minmax(140px, 1fr));
    gap: var(--space-4);
  }

  .year-block {
    display: flex;
    flex-direction: column;
    align-items: center;
    gap: var(--space-2);
    padding: var(--space-6) var(--space-4);
    text-decoration: none;
    color: inherit;
    background: var(--paper-cotton);
    border: 1px solid var(--rule-faint);
    border-radius: 2px;
    transition:
      border-color var(--duration-normal) var(--ease-out),
      box-shadow var(--duration-normal) var(--ease-out),
      transform var(--duration-normal) var(--ease-out);
    animation: settle var(--duration-slower) var(--ease-out) forwards;
    opacity: 0;
    transform: translateY(8px);
  }

  .year-block:hover {
    border-color: var(--rule-medium);
    box-shadow: 0 4px 12px rgba(26, 22, 18, 0.08);
    transform: translateY(-2px);
  }

  .year-block:hover .year-block-year {
    color: var(--accent-stamp);
  }

  .year-block-year {
    font-family: var(--font-display);
    font-size: var(--text-3xl);
    font-weight: 400;
    font-variant-numeric: oldstyle-nums;
    line-height: 1;
    color: var(--ink-deep);
    transition: var(--transition-color);
  }

  .year-block-count {
    font-family: var(--font-ui);
    font-size: var(--text-xs);
    font-style: italic;
    color: var(--ink-muted);
    letter-spacing: var(--tracking-wide);
  }

  /* Unknown Section */
  .unknown-section {
    margin-top: var(--space-12);
    padding-top: var(--space-10);
    border-top: 1px solid var(--rule-faint);
  }

  .unknown-header {
    margin-bottom: var(--space-6);
  }

  .unknown-title {
    font-family: var(--font-display);
    font-size: var(--text-2xl);
    font-weight: 400;
    font-style: italic;
    color: var(--ink-soft);
    margin: 0 0 var(--space-2);
  }

  .unknown-subtitle {
    font-family: var(--font-ui);
    font-size: var(--text-sm);
    font-style: italic;
    color: var(--ink-muted);
    margin: 0;
  }

  .unknown-list {
    display: grid;
    grid-template-columns: repeat(auto-fill, minmax(200px, 1fr));
    gap: var(--space-3);
    list-style: none;
    margin: 0;
    padding: 0;
  }

  .unknown-link {
    display: flex;
    flex-direction: column;
    gap: var(--space-1);
    padding: var(--space-3) var(--space-4);
    text-decoration: none;
    color: inherit;
    border: 1px solid var(--rule-faint);
    border-radius: 2px;
    transition: border-color var(--duration-normal) var(--ease-out);
  }

  .unknown-link:hover {
    border-color: var(--rule-light);
  }

  .unknown-link:hover .unknown-name {
    color: var(--accent-stamp);
  }

  .unknown-name {
    font-family: var(--font-display);
    font-size: var(--text-base);
    font-weight: 500;
    color: var(--ink-body);
    transition: var(--transition-color);
  }

  .unknown-genre {
    font-family: var(--font-ui);
    font-size: var(--text-xs);
    font-style: italic;
    color: var(--ink-muted);
  }

  /* Responsive */
  @media (max-width: 900px) {
    .years-layout {
      grid-template-columns: 1fr;
      gap: var(--space-8);
    }

    .years-sidebar {
      position: static;
      max-height: none;
      overflow: visible;
      padding-right: 0;
    }

    .sidebar-nav {
      display: none;
    }
  }

  @media (max-width: 768px) {
    .years-page {
      padding: 0 var(--margin-page-narrow);
    }

    .page-title {
      font-size: var(--text-4xl);
    }

    .years-grid {
      grid-template-columns: repeat(auto-fill, minmax(120px, 1fr));
      gap: var(--space-3);
    }

    .year-block {
      padding: var(--space-5) var(--space-3);
    }

    .year-block-year {
      font-size: var(--text-2xl);
    }
  }

  @media (max-width: 480px) {
    .page-header {
      padding: var(--space-8) 0 var(--space-10);
    }

    .page-title {
      font-size: var(--text-3xl);
    }

    .years-grid {
      grid-template-columns: repeat(2, 1fr);
    }

    .unknown-list {
      grid-template-columns: 1fr;
    }
  }
</style>
