---
/**
 * Writers Index â€” The Archive
 *
 * An alphabetical reference. More utilitarian treatment that signals "index"
 * versus the curated timeline experience. A comprehensive directory.
 */
import Base from '../../layouts/Base.astro';
import { writers, getAllGenres } from '../../lib/data';

const genres = getAllGenres();
const sortedWriters = [...writers].sort((a, b) => a.name.localeCompare(b.name));

// Group writers by first letter
const writersByLetter = sortedWriters.reduce((acc, writer) => {
  const letter = writer.name[0].toUpperCase();
  if (!acc[letter]) acc[letter] = [];
  acc[letter].push(writer);
  return acc;
}, {} as Record<string, typeof writers>);

const letters = Object.keys(writersByLetter).sort();
---

<Base title="Writers" description="Browse all writers who have visited the Lewis & Clark College Reading Series">
  <div class="writers-page">
    <!-- Page Header -->
    <header class="page-header">
      <h1 class="page-title">Writers</h1>
      <p class="page-subtitle">The complete index</p>
      <p class="page-count">{writers.length} writers in the archive</p>
    </header>

    <!-- Genre Filter -->
    <nav class="genre-filter" aria-label="Filter by genre">
      <span class="filter-label">Filter:</span>
      <ul class="genre-list" role="list">
        {genres.map((genre) => (
          <li>
            <a href={`?genre=${genre}`} class="genre-tag">
              {genre}
            </a>
          </li>
        ))}
      </ul>
    </nav>

    <!-- Letter Navigation -->
    <nav class="letter-nav" aria-label="Jump to letter">
      <ul class="letter-list" role="list">
        {letters.map((letter) => (
          <li>
            <a href={`#letter-${letter}`} class="letter-link">
              {letter}
            </a>
          </li>
        ))}
      </ul>
    </nav>

    <!-- Writers Directory -->
    <main class="writers-directory">
      {letters.map((letter, letterIndex) => (
        <section
          class="letter-section"
          id={`letter-${letter}`}
          style={`animation-delay: ${letterIndex * 30}ms`}
        >
          <h2 class="letter-heading">{letter}</h2>
          <ul class="writer-list" role="list">
            {writersByLetter[letter].map((writer, i) => (
              <li class="writer-entry" style={`animation-delay: ${letterIndex * 30 + i * 20}ms`}>
                <a href={`/writers/${writer.id}`} class="writer-link">
                  <span class="writer-name">{writer.name}</span>
                  <span class="writer-meta">
                    <span class="writer-genre">{writer.genre}</span>
                    {writer.years.filter(y => y !== 0).length > 0 && (
                      <span class="writer-years">
                        {writer.years.filter(y => y !== 0).join(', ')}
                      </span>
                    )}
                  </span>
                </a>
              </li>
            ))}
          </ul>
        </section>
      ))}
    </main>

    <!-- Back to Top -->
    <nav class="page-nav">
      <a href="#" class="top-link">
        <span class="nav-arrow">&uarr;</span>
        <span class="nav-label">Back to top</span>
      </a>
    </nav>
  </div>
</Base>

<style>
  .writers-page {
    max-width: var(--width-content);
    margin: 0 auto;
    padding: 0 var(--margin-page);
  }

  /* Page Header */
